@model ClothesShop.Models.Category

@{
    ViewBag.Title = "Danh Mục - Tạo Mới";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>Tạo Danh Mục</h2>

@using (Html.BeginForm()) {
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
            <div class="editor-field">
                @Html.DropDownListFor(model => model.ParentID, (SelectList)ViewBag.SelectList, "--- Thuộc Danh Mục ---", new { @class = "form-control" })
            </div>
        </div>
        <div class="col-xs-0 col-sm-6 col-md-8 col-lg-8"></div>
    </div>
    
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
            <div class="editor-field">
                @Html.TextBoxFor(model => model.CatName, new { placeholder = "Tên Danh Mục", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CatName)
            </div>
        </div>
        <div class="col-xs-0 col-sm-6 col-md-8 col-lg-8"></div>
    </div>
    
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 text-right">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-ok"></span>
                Lưu
            </button>

            @*<div style="float:right">*@
                <a href="@Url.Action("Index")" class="btn btn-danger">
                    <span class="glyphicon glyphicon-remove"></span>
                    Hủy
                </a>
            @*</div>*@
        </div>
        <div class="col-xs-0 col-sm-6 col-md-8 col-lg-8"></div>
    </div>    
}